{
  "manifest_version": 2,
  "name": "Assignment Manager for CP",
  "short_name": "LMSExt",
  "description": "Manage your homework easily",
  "version": "0.0.4",
  "author": "Vimmer",
  
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  
  "browser_action":{
    "default_popup":"popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://lms.ynu.ac.jp/lms/homeHoml/"
      ],
      "js": [
        "show_homework.js"
      ],
      "css": []
    },
    {
      "matches": [
        "https://lms.ynu.ac.jp/lms/homeHoml/linkKougi",
        "https://lms.ynu.ac.jp/lms/corsColl/"
      ],
      "js": [
        "fetch_homework.js"
      ],
      "css": []
    }
  ]
}
